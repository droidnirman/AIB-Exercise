<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_margin"
    android:layout_marginEnd="@dimen/item_margin"
    tools:ignore="ContentDescription">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardBackgroundColor="@color/colorCardBackground"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/item_margin">

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/image_weather_icon"
                android:ellipsize="end"
                android:fontFamily="@font/lato_bold"
                android:lines="1"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/title_text_20sp" />

            <TextView
                android:id="@+id/text_weather_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_date"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/item_vertical_margin"
                android:layout_toStartOf="@id/image_weather_icon"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/description_text_14sp" />

            <ImageView
                android:id="@+id/image_weather_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/item_margin"
                android:layout_marginEnd="@dimen/item_margin"
                android:layout_toStartOf="@id/text_max_temp" />


            <TextView
                android:id="@+id/text_max_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/image_weather_icon"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/description_text_14sp" />

            <TextView
                android:id="@+id/text_min_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_max_temp"
                android:layout_alignBottom="@id/image_weather_icon"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/item_vertical_margin"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/description_text_14sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>