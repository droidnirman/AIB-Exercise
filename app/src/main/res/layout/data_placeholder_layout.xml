<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_margin"
    android:layout_marginTop="@dimen/item_vertical_margin"
    android:layout_marginEnd="@dimen/item_margin"
    android:layout_marginBottom="@dimen/item_vertical_margin"
    tools:ignore="ContentDescription">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardBackgroundColor="@color/colorCardBackground"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/item_margin">

            <View
                android:id="@+id/view_p1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/placeholderTextHeight"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/view_p3"
                android:background="@color/colorShimmerBackground" />

            <View
                android:id="@+id/view_p2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/placeholderTextHeight"
                android:layout_below="@id/view_p1"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/item_vertical_margin"
                android:layout_toStartOf="@id/view_p3"
                android:background="@color/colorShimmerBackground" />

            <View
                android:id="@+id/view_p3"
                android:layout_width="@dimen/placeholderImage"
                android:layout_height="@dimen/placeholderImage"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/item_margin"
                android:layout_marginEnd="@dimen/item_margin"
                android:layout_toStartOf="@id/view_p4"
                android:background="@color/colorShimmerBackground" />


            <View
                android:id="@+id/view_p4"
                android:layout_width="20dp"
                android:layout_height="@dimen/placeholderTextHeight"
                android:layout_alignParentEnd="true"
                android:background="@color/colorShimmerBackground" />

            <View
                android:id="@+id/view_p5"
                android:layout_width="20dp"
                android:layout_height="@dimen/placeholderTextHeight"
                android:layout_below="@id/view_p4"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/item_vertical_margin"
                android:background="@color/colorShimmerBackground" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>